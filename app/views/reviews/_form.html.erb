

<%= form_for [@gear, @review] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title%>
<br>
  <%= f.label :author %>
  <%= f.text_field :author%>
<br>
  <%= f.label :content %>
  <%= f.text_field :content%>
<br>
  <%= f.label :rating %>
  <%= f.select :rating, [[1], [2], [3], [4], [5]]%>
<br>
  <%= f.submit %>
<% end %>
