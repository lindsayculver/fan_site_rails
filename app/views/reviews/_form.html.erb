<%= form_for [@gear, @review] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title%>

  <%= f.label :author %>
  <%= f.text_field :author%>

  <%= f.label :content %>
  <%= f.text_field :content%>

  <%= f.label :rating %>
  <%= f.select :rating, [[1], [2], [3], [4], [5]]%>

  <%= f.submit %>
<% end %>
