<%= form_for @gear do |f| %>
  <%= f.label :year %>
  <%= f.select :year, [[2012], [2013], [2014], [2015], [2016]]%> <br>

  <%= f.label :category %>
  <%= f.select :category, [['Kites'], ['Boards'], ['Accessories']]%> <br>

  <%= f.label :brand %>
  <%= f.select :brand, [['Best'], ['Airush'], ['Slingshot']]%> <br>

  <%= f.label :model %>
  <%= f.text_field :model%> <br>

  <%= f.label :image %>
  <%= f.file_field :image %>

  <%= f.label :description %> <br>
  <%= f.text_area :description%> <br>

  <%= f.label :featured, "Featured?" %>
  <%= f.check_box :featured %> <br>

  <%= f.submit %>
<% end %>
