<%= form_for @gear do |f| %>
  <%= f.label :year %>
  <%= f.select :year, [[2010], [2011], [2012]]%> <br>

  <%= f.label :category %>
  <%= f.select :category, [['Kites'], ['Boards'], ['Accessories']]%> <br>

  <%= f.label :brand %>
  <%= f.select :brand, [['Best'], ['Airush'], ['Slingshot']]%> <br>

  <%= f.label :model %>
  <%= f.text_field :model%> <br>

  <%= f.label :description %> <br>
  <%= f.text_area :description%> <br>
  <%= f.submit %>
<% end %>
